<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/
    tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/lay_payment"
    tools:context="cn.com.fooltech.smartparking.activity.ScanPayActivity">

    <RelativeLayout
        android:id="@+id/lay_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/green"
            android:textSize="@dimen/activity_title"
            android:text="@string/title_activity_scanpay"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/lay_pay1"
        android:layout_below="@id/lay_pay"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="付款金额"/>
    <RelativeLayout
        android:id="@+id/lay_pay2"
        android:background="@drawable/bg_white"
        android:layout_below="@id/lay_pay1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pay_amount1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="0元"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_below="@id/pay_amount1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cancle_pay"
                android:layout_below="@id/pay_amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:background="@drawable/bg_gray2"
                android:textSize="@dimen/btn_text"
                android:text="取消"/>
            <TextView
                android:id="@+id/sure_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_marginLeft="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:background="@drawable/selector_btn_click"
                android:textSize="@dimen/btn_text"
                android:textColor="@color/text_button2"
                android:text="确定"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/use_voucher2"
        android:layout_below="@id/lay_pay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:clickable="true"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/oval_gray"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:text="使用停车券"/>
</RelativeLayout>
