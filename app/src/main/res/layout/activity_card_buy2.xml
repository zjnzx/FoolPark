<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.CardBuyActivity2">
    <RelativeLayout
        android:id="@+id/lay_card_buy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_card_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_title"
            android:textColor="@color/green"
            android:text="@string/title_activity_card_buy"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/lay_card_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/lay_card_buy2"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_card_buy1"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222422"
                    android:text="@string/title_activity_card_buy_text1"/>
                <cn.com.fooltech.smartparking.view.MyRadioGroup
                    android:id="@+id/radiogroup_card"
                    android:layout_below="@id/tv_card_buy1"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/card_month"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp">
                        <RadioButton
                            android:id="@+id/card_month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:gravity="center|right"
                            android:paddingRight="25dp"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:text="￥398元"/>
                        <ImageView
                            android:id="@+id/image_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:background="@drawable/checked_amount"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@drawable/card_quarter"
                        android:layout_marginLeft="11dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp">
                        <RadioButton
                            android:id="@+id/card_quarter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:paddingRight="25dp"
                            android:button="@null"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:text="￥1198元"/>
                        <ImageView
                            android:id="@+id/image_quarter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:background="@drawable/checked_amount"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@drawable/card_year"
                        android:layout_marginLeft="11dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp">
                        <RadioButton
                            android:id="@+id/card_year"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:paddingRight="25dp"
                            android:button="@null"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:text="￥3980元"/>
                        <ImageView
                            android:id="@+id/image_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:background="@drawable/checked_amount"/>
                    </RelativeLayout>
                </cn.com.fooltech.smartparking.view.MyRadioGroup>
                <Button
                    android:id="@+id/btn_card_buy2"
                    android:layout_below="@id/radiogroup_card"
                    android:layout_marginTop="20dp"
                    android:layout_width="@dimen/btn_long_width"
                    android:layout_height="@dimen/btn_long_heigh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/selector_btn_click"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="@dimen/btn_text"
                    android:textColor="@color/text_button2"
                    android:text="确认购买"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_card4"
                android:layout_below="@id/lay_card_buy2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222422"
                android:text="停车场信息"/>
            <RelativeLayout
                android:id="@+id/lay_park_info"
                android:layout_below="@id/tv_card4"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/park_name_show5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#222422"
                    android:text="停车场"/>
                <TextView
                    android:id="@+id/park_addr_show5"
                    android:layout_below="@id/park_name_show5"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="111号"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_card5"
                android:layout_below="@id/lay_park_info"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222422"
                android:text="包月类型"/>
            <RelativeLayout
                android:id="@+id/lay_card_buy1"
                android:layout_below="@id/tv_card5"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_card6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#222422"
                    android:text="@string/title_activity_card_buy_text2"/>
                <TextView
                    android:id="@+id/tv_card7"
                    android:layout_below="@id/tv_card6"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#656565"
                    android:text="@string/title_activity_card_buy_text3"/>
                <TextView
                    android:id="@+id/time_service"
                    android:layout_below="@id/tv_card6"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00"/>
                <!--<TextView
                    android:id="@+id/park_price"
                    android:layout_below="@id/time_service"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="收费标准:"/>-->
                <TextView
                    android:id="@+id/tv_card_buy2"
                    android:layout_below="@id/time_service"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_card_buy_text4"/>
                <TextView
                    android:layout_below="@id/tv_card_buy2"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="@string/title_activity_card_buy_text5"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_card_buy3"
                android:layout_below="@id/lay_card_buy1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222422"
                android:text="包月协议"/>
            <RelativeLayout
                android:id="@+id/lay_card_buy3"
                android:layout_below="@id/tv_card_buy3"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_card_buy4"
                    android:background="@drawable/bg_gray_circle"
                    android:gravity="center"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/white"
                    android:text="1"/>
                <TextView
                    android:id="@+id/tv_card_buy5"
                    android:layout_toRightOf="@id/tv_card_buy4"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#636363"
                    android:text="@string/title_activity_card_buy_text6"/>
                <TextView
                    android:layout_below="@id/tv_card_buy5"
                    android:background="@drawable/bg_gray_circle"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textColor="@color/white"
                    android:text="2"/>
                <TextView
                    android:id="@+id/tv_card_buy6"
                    android:layout_toRightOf="@id/tv_card_buy4"
                    android:layout_below="@id/tv_card_buy5"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#636363"
                    android:text="@string/title_activity_card_buy_text7"/>
                <TextView
                    android:layout_below="@id/tv_card_buy6"
                    android:background="@drawable/bg_gray_circle"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textColor="@color/white"
                    android:text="3"/>
                <TextView
                    android:id="@+id/tv_card_buy7"
                    android:layout_toRightOf="@id/tv_card_buy4"
                    android:layout_below="@id/tv_card_buy6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#636363"
                    android:text="@string/title_activity_card_buy_text8"/>
                <TextView
                    android:layout_below="@id/tv_card_buy7"
                    android:background="@drawable/bg_gray_circle"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textColor="@color/white"
                    android:text="4"/>
                <TextView
                    android:id="@+id/tv_card_buy8"
                    android:layout_toRightOf="@id/tv_card_buy4"
                    android:layout_below="@id/tv_card_buy7"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#636363"
                    android:text="@string/title_activity_card_buy_text8"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
