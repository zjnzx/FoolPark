<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/lay_comment1"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/lay_comment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.com.fooltech.smartparking.view.RoundImageView
                android:id="@+id/user_image_show"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:background="@drawable/default_user"/>
            <TextView
                android:id="@+id/user_nick_show"
                android:layout_toRightOf="@id/user_image_show"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#121212"
                android:textSize="12sp"
                android:text="111111"/>
            <TextView
                android:id="@+id/comment_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a8a8a8"
                android:textSize="9sp"
                android:text="111111"/>
            <RatingBar
                android:id="@+id/comment_grade"
                style="@style/ratingBarSmall"
                android:isIndicator="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/user_image_show"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_nick_show"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/lay_comment2"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="#121212"
                android:text="11111"/>
            <TextView
                android:id="@+id/comment_support_count"
                android:layout_alignParentRight="true"
                android:layout_below="@id/comment_content"
                android:background="@drawable/selector_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/support_comment"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#6E6E6E"
                android:text="123"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
