<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:text="提示"/>
        <TextView
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/prompt"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:text="@string/dialog_prompt_text1"/>
        <ImageView
            android:id="@+id/iv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_prompt"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/oval_red"/>
        <TextView
            android:id="@+id/tv_prompt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/tv_prompt"
            android:layout_toRightOf="@id/iv_prompt"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="#FF6347"
            android:text="@string/dialog_prompt_text2"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:layout_below="@id/tv_prompt2"
            android:layout_centerHorizontal="true"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/selector_btn_click"
            android:textColor="@color/text_button2"
            android:textSize="@dimen/btn_text"
            android:text="好的"/>
    </RelativeLayout>
</RelativeLayout>
