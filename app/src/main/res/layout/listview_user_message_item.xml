<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/user_image"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        android:background="@drawable/msg_user_result"/>
    <TextView
        android:id="@+id/message_text2"
        android:layout_toRightOf="@id/user_image"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="111111"/>
    <TextView
        android:id="@+id/send_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_image"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/message_text2"
        android:textSize="12sp"
        android:textColor="#a8a8a8"
        android:text="111111"/>
    <TextView
        android:id="@+id/agree"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/selector_btn_click"
        android:layout_below="@id/message_text2"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_button2"
        android:text="同意"/>
    <TextView
        android:id="@+id/reject"
        android:layout_toLeftOf="@id/agree"
        android:layout_below="@id/message_text2"
        android:layout_marginRight="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:background="@drawable/selector_excharge_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拒绝"/>
    <!--<TextView
        android:id="@+id/send_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="4545"/>-->
</RelativeLayout>
