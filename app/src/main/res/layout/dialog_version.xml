<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/version_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="发现新版本"/>
        <LinearLayout
            android:layout_below="@id/version_new"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/cancle_update"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/selector_excharge_btn"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="@dimen/btn_text"
                android:text="以后再说"/>
            <Button
                android:id="@+id/update"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/selector_btn_click"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="@dimen/btn_text"
                android:textColor="@color/text_button2"
                android:text="立即更新"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>