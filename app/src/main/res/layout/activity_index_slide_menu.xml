<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="150dp"
    android:id="@+id/lay_root_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/user_center"
        android:layout_weight="1.8"
        android:paddingLeft="20dp"
        android:onClick="onClick"
        android:background="@drawable/selector_item"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <cn.com.fooltech.smartparking.view.RoundImageView
            android:id="@+id/user_head_show"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_user"/>
        <RelativeLayout
            android:layout_toRightOf="@id/user_head_show"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nick_name_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:hint="未命名"
                android:textColorHint="@color/text_color"
                android:text=""/>
            <TextView
                android:id="@+id/mobile_show"
                android:layout_marginTop="10dp"
                android:layout_below="@id/nick_name_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text=""/>
            <TextView
                android:id="@+id/unLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:text="点击头像登录"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/divider"/>
    <TextView
        android:id="@+id/activity"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/gift"
        android:background="@drawable/selector_item"
        android:drawablePadding="20dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="活动中心"/>
    <TextView
        android:id="@+id/order_collect"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/collect"
        android:background="@drawable/selector_item"
        android:drawablePadding="20dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="预约收藏"/>
    <RelativeLayout
        android:id="@+id/message"
        android:layout_weight="1"
        android:onClick="onClick"
        android:clickable="true"
        android:background="@drawable/selector_item"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/message"
            android:drawablePadding="20dp"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:text="我的消息"/>
        <ImageView
            android:id="@+id/new_message"
            android:layout_toRightOf="@id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/oval_red"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/car_manage"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/car_manage"
        android:background="@drawable/selector_item"
        android:drawablePadding="20dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="车辆管理"/>
    <TextView
        android:id="@+id/search_car"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/search"
        android:background="@drawable/selector_item"
        android:drawablePadding="20dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="寻找爱车"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/divider"/>
    <TextView
        android:id="@+id/setting"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/setting"
        android:background="@drawable/selector_item"
        android:drawablePadding="20dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="设置"/>
    <TextView
        android:id="@+id/about"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/about"
        android:background="@drawable/selector_item"
        android:drawablePadding="20dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="关于"/>
</LinearLayout>
