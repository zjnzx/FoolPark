<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="cn.com.fooltech.smartparking.activity.ShareFriendsActivity">
    <RelativeLayout
        android:id="@+id/lay_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_title"
            android:textColor="@color/green"
            android:text="@string/title_activity_share_friends"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_share1"
        android:gravity="center"
        android:background="@color/white"
        android:layout_below="@id/lay_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:text="@string/title_activity_share_friends_text1"/>
    <TextView
        android:id="@+id/tv_share2"
        android:layout_below="@id/tv_share1"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/title_activity_share_friends_text2"/>
    <RelativeLayout
        android:layout_below="@id/tv_share2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerInParent="true"
        android:paddingBottom="6dp"
        android:background="@drawable/voucher_unuse"
        android:layout_width="300dp"
        android:layout_height="120dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/voucher_price_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="有效期一个月"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lay_share1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view_line1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"/>
            <TextView
                android:id="@+id/tv_share3"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:text="分享到"/>
            <View
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/lay_share1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/share_moment"
                android:gravity="center"
                android:background="@drawable/selector_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ssdk_oks_classic_wechatmoments"
                android:text="微信朋友圈"/>
            <TextView
                android:id="@+id/share_wechat"
                android:gravity="center"
                android:background="@drawable/selector_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ssdk_oks_classic_wechat"
                android:text="微信好友"/>
            <TextView
                android:id="@+id/share_favorite"
                android:gravity="center"
                android:background="@drawable/selector_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ssdk_oks_classic_wechatfavorite"
                android:text="微信收藏"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
