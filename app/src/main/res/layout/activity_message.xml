<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="cn.com.fooltech.smartparking.activity.MessageActivity">

    <RelativeLayout
        android:id="@+id/lay_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <RadioGroup
            android:id="@+id/rg_message"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/user_message"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/selector_radiobutton_left2"
                android:textSize="@dimen/activity_title"
                android:text="用户消息"/>
            <RadioButton
                android:id="@+id/sys_message"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/green"
                android:background="@drawable/selector_radiobutton_right2"
                android:textSize="@dimen/activity_title"
                android:text="系统通知"/>
        </RadioGroup>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/lay_content_message"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_below="@id/lay_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
