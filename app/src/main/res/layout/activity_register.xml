<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="cn.com.fooltech.smartparking.activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/lay_reg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_resg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_title"
            android:textColor="@color/green"
            android:text="@string/title_activity_register"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@id/lay_reg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/phone"/>
            <cn.com.fooltech.smartparking.view.CustomEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:paddingBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="47dp"
                android:inputType="numberSigned"
                android:maxLength="11"
                android:background="@null"
                android:textColorHint="@color/text_hint"
                android:hint="请输入手机号"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/code"/>
            <cn.com.fooltech.smartparking.view.CustomEditText
                android:id="@+id/et_identify_code"
                android:layout_width="match_parent"
                android:layout_marginLeft="47dp"
                android:layout_alignParentBottom="true"
                android:layout_height="35dp"
                android:paddingBottom="0dp"
                android:inputType="numberSigned"
                android:background="@null"
                android:textColorHint="@color/text_hint"
                android:hint="请输入验证码"/>
            <Button
                android:id="@+id/bt_get_code"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:text="获取验证码"
                android:background="@drawable/selector_btn_click"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/text_button2"
                android:textSize="@dimen/btn_text" />
        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="16dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock"/>
            <cn.com.fooltech.smartparking.view.CustomEditText
                android:id="@+id/et_password"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="47dp"
                android:layout_height="35dp"
                android:paddingBottom="0dp"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM_"
                android:singleLine="true"
                android:background="@null"
                android:textColorHint="@color/text_hint"
                android:hint="请输入密码"/>
            <CheckBox
                android:id="@+id/vis_pwd_res"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/selector_pwd"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <Button
            android:id="@+id/bt_register"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:layout_width="@dimen/btn_long_width"
            android:layout_height="@dimen/btn_long_heigh"
            android:background="@drawable/selector_btn_click"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/text_button2"
            android:textSize="@dimen/btn_text"
            android:text="注册"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8b8b8b"
                android:textSize="14sp"
                android:button="@null"
                android:drawableLeft="@drawable/selector_checkbox_clause"
                android:text="我已阅读并接受傻瓜停车"/>
            <TextView
                android:id="@+id/user_agreement"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="14sp"
                android:textColor="@color/text_link"
                android:text="用户协议"/>"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
