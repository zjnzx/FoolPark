<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="cn.com.fooltech.smartparking.activity.BillDetailActivity">

    <RelativeLayout
        android:id="@+id/lay_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_title"
            android:textColor="@color/green"
            android:text="@string/title_activity_bill_detail"/>
    </RelativeLayout>
    <cn.com.fooltech.smartparking.view.ListViewPlus
        android:id="@+id/lv_bill"
        android:layout_marginTop="1dp"
        android:layout_below="@id/lay_bill"
        android:divider="@color/divider"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>
    <TextView
        android:id="@+id/empty_bill"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_empty"
        android:textSize="18sp"
        android:text="暂无账单详情"/>
</RelativeLayout>
