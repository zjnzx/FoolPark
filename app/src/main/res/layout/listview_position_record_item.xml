<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:id="@+id/lay_sapce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/location"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location5"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/park_name_show3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxEms="13"
                android:textSize="16sp"
                android:text="停车场"/>
            <TextView
                android:id="@+id/park_addr_show3"
                android:layout_below="@id/park_name_show3"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a8a8a8"
                android:text="上海市"/>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:id="@+id/lay_navi1"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/selector_item"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/distance_show1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/navigation"
                android:textColor="#a8a8a8"
                android:text="210m"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line5"
        android:layout_below="@id/lay_sapce"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_below="@id/line5"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/time"
                android:gravity="center"
                android:text="111"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/space_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/space"
                android:gravity="center"
                android:text="车位"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/space_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/floor"
                android:gravity="center"
                android:text="一层"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
