<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="cn.com.fooltech.smartparking.activity.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/lay_reset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_title"
            android:textColor="@color/green"
            android:text="@string/title_activity_reset_password"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_below="@id/lay_reset"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lay_reset1"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/phone"/>
            <cn.com.fooltech.smartparking.view.CustomEditText
                android:id="@+id/reset_mobile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:inputType="numberSigned"
                android:maxLength="11"
                android:layout_marginLeft="@dimen/edit_left"
                android:background="@null"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:hint="请输入手机号"/>
        </LinearLayout>
        <Button
            android:id="@+id/bt_next"
            android:layout_below="@id/lay_reset1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/selector_btn_click"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/btn_text"
            android:textColor="@color/text_button2"
            android:text="下一步"/>
    </RelativeLayout>
</RelativeLayout>
