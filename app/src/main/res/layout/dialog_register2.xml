<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/bg_white"
        android:layout_marginRight="46dp"
        android:layout_marginTop="46dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_register"/>
        <TextView
            android:id="@+id/reg_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:text="@string/dialog_register_text1"/>
        <!--<include
            android:id="@+id/lay_voucher2"
            android:layout_below="@id/reg_tv1"
            android:layout_height="110dp"
            android:layout_width="wrap_content"
            layout="@layout/listview_voucher_item"/>-->
        <RelativeLayout
            android:id="@+id/lay_voucher2"
            android:layout_below="@id/reg_tv1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_centerInParent="true"
            android:paddingBottom="3dp"
            android:background="@drawable/voucher_unuse"
            android:layout_width="wrap_content"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/privilege_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="55dp"
                android:background="@drawable/voucher_price_10"/>
            <ImageView
                android:id="@+id/icon_stale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/icon_stale"/>
            <TextView
                android:id="@+id/time_limit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:textColor="#888888"
                android:textSize="12sp"
                android:text="2016.09.09"/>
            <TextView
                android:id="@+id/status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#888888"
                android:textSize="12sp"
                android:text="未使用"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/reg_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_voucher2"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:textSize="14sp"
            android:text="@string/dialog_register_text3"/>
        <TextView
            android:id="@+id/reg_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_tv3"
            android:paddingLeft="25dp"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:textSize="14sp"
            android:text="@string/dialog_register_text4"/>
        <View
            android:id="@+id/view6"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/reg_tv4"
            android:background="@color/divider"/>
        <Button
            android:id="@+id/btn_bind_car"
            android:layout_below="@id/view6"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/selector_btn_click"
            android:textColor="@color/text_button2"
            android:textSize="@dimen/btn_text"
            android:text="@string/dialog_register_text5"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/close_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/close_x"/>
</RelativeLayout>
