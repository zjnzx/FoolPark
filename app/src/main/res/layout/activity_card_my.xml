<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.CardMyActivity">

    <RelativeLayout
        android:id="@+id/lay_card_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_card_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/selector_item"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_title"
            android:textColor="@color/green"
            android:text="@string/title_activity_my_card"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@id/lay_card_my"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<ImageView
            android:id="@+id/tv_card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/empty_card"/>-->
        <RelativeLayout
            android:id="@+id/lay_card_my2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/lv_card_my"
                android:listSelector="@android:color/transparent"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/empty_card2"
                android:layout_marginTop="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/empty_card"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                android:textColor="#85505257"
                android:text="@string/title_activity_my_card_text"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_card_buy"
            android:layout_below="@id/lay_card_my2"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/btn_long_width"
            android:layout_height="@dimen/btn_long_heigh"
            android:layout_marginTop="28dp"
            android:background="@drawable/selector_btn_click"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/btn_text"
            android:textColor="@color/text_button2"
            android:text="购买月卡"/>
    </RelativeLayout>
</RelativeLayout>
