<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_checked="false">
        <shape>
            <!-- 默认背景颜色 -->
            <stroke
                android:width="1dp"
                android:color="@color/green" />
            <solid android:color="@color/white"/>
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp"
                android:topRightRadius="5dp" android:bottomRightRadius="5dp"/>
            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="10dp"
                android:top="3dp" >
            </padding>
        </shape>
    </item>
    <item
        android:state_checked="true"  >
        <shape>
            <!-- 按下背景颜色 -->
            <solid android:color="@color/green"/>
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp"
                android:topRightRadius="5dp" android:bottomRightRadius="5dp"/>
            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="10dp"
                android:top="3dp" >
            </padding>
        </shape>
    </item>
</selector>
